<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <VBox>
            <MenuBar fx:id="menuBar">
                <Menu fx:id="languageMenu" text="Language" />
            </MenuBar>
            <HBox spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
                <Label text="Пользователь:" />
                <Label fx:id="currentUserLabel" style="-fx-font-weight: bold;" />
                <Button text="Выйти" fx:id="logoutButton" style="-fx-base: #ff4444;" />
                <Label text="Фильтр:" />
                <TextField fx:id="filterField" promptText="Введите фильтр..." />
                <Button text="Применить" fx:id="applyFilterButton" />
                <Button text="Сбросить" fx:id="resetFilterButton" />
            </HBox>
        </VBox>
    </top>

    <!-- Остальная часть FXML остается без изменений -->
</BorderPane>
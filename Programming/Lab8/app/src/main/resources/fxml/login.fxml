<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="root" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="lab8.client.controllers.LoginController"
    stylesheets="@../css/login.css" >

    <children>
        <VBox fx:id="loginContainer" alignment="CENTER" spacing="15"
            maxWidth="300" maxHeight="220" styleClass="login-box">
            <Label text="Space Marine Collection" styleClass="title-label" />
            <TextField fx:id="loginField" promptText="Login" maxWidth="250"/>
            <PasswordField fx:id="passwordField" promptText="Password" maxWidth="250"/>
            <Button fx:id="loginBtn" text="Login" onAction="#loginClick" maxWidth="250"/>
        </VBox>
    </children>
</StackPane>
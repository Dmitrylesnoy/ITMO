<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<DialogPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <headerText>
        <Text text="Редактирование объекта" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
    </headerText>

    <content>
        <GridPane hgap="10" vgap="10">
            <Label text="Имя:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <Label text="Координата X:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextField fx:id="xField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <Label text="Координата Y:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <TextField fx:id="yField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

            <!-- Добавьте другие поля по необходимости -->
        </GridPane>
    </content>
</DialogPane>